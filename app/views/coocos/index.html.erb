<h1>Lamentele</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coocos.each do |cooco| %>
      <tr>
        <td><%= cooco.content %></td>
        <td><%= link_to cooco.user.name + ' ' + cooco.user.surname , cooco.user %></td>
        <td><%= link_to 'Show', cooco %></td>
        <td><%= link_to 'Edit', edit_cooco_path(cooco) %></td>
        <td><%= link_to 'Destroy', cooco, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cooco', new_cooco_path %>
